@using Microsoft.AspNetCore.Mvc.Localization
@using Redoak.Backoffice
@{
    Layout = null;
}
@*@inject LocalizeService a;

@inject IViewLocalizer Localizer;*@
@inject IHtmlLocalizer<SharedResource> R;
@*@Localizer["SystemTitle"] <br />
@R["SystemTitle"] <br />
@a["SystemTitle"] <br />*@

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="nav-brand-logo">
        <img src="~/Redoka-Logo.png" class="img-fluid" />
    </div>

    <a class="navbar-brand" asp-action="Index" asp-controller="Home">@R["SystemTitle"]</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            @* 訂單模組 *@
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navOrderModule"
                   role="button" data-toggle="dropdown"
                   aria-expanded="false"
                   aria-haspopup="true">
                    @R["OrderModule"]
                </a>
                <div class="dropdown-menu" aria-labelledby="navOrderModule">
                    <a asp-area="System"
                       asp-controller="PersonalProfile"
                       asp-action="Index"
                       class="dropdown-item">
                        @R["OrderModule-OrderManage"]
                    </a>
                    <a asp-area="" asp-controller="UserManage" asp-action="UserRole" class="dropdown-item">@R["OrderModule-OrderQuery"]</a>
                </div>
            </li>
            @* 進銷模組 *@
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navStockModule"
                   role="button" data-toggle="dropdown"
                   aria-expanded="false"
                   aria-haspopup="true">
                    @R["StockModule"]
                </a>
                <div class="dropdown-menu" aria-labelledby="navSystemModule">
                    <a asp-area="Stock"
                       asp-controller="PersonalProfile"
                       asp-action="Index"
                       class="dropdown-item">
                        @R["StockModule-進貨管理"]
                    </a>
                    <a asp-area="Stock" asp-controller="UserManage" asp-action="UserRole" class="dropdown-item">@R["StockModule-銷貨管理"]</a>
                    <a asp-area="Stock" asp-controller="QuotationManage" asp-action="Regist" class="dropdown-item">@R["StockModule-報價管理"]</a>
                    <a asp-area="Stock" asp-controller="StockManage" asp-action="Index" class="dropdown-item">@R["StockModule-商品管理"]</a>
                </div>
            </li>
            
            @* 客戶模組 *@
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navCustomerModule"
                   role="button" data-toggle="dropdown"
                   aria-expanded="false"
                   aria-haspopup="true">
                    @R["CustomerModule"]
                </a>
                <div class="dropdown-menu" aria-labelledby="navCustomerModule">
                    <a asp-area="Customer"
                       asp-controller="CustomerManage"
                       asp-action="Index"
                       class="dropdown-item">
                        @R["CustomerModule-客戶管理"]
                    </a>
                </div>
            </li>

            @* 報表模組 *@
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navReportModule"
                   role="button" data-toggle="dropdown"
                   aria-expanded="false"
                   aria-haspopup="true">
                    @R["ReportModule"]
                </a>
                <div class="dropdown-menu" aria-labelledby="navSystemModule">
                    <a asp-area="" asp-controller="OrderReportSearch" asp-action="UserRole" class="dropdown-item"> @R["ReportModule-訂單報表查詢"]</a>
                    <a asp-area="" asp-controller="StockReportSearch" asp-action="Regist" class="dropdown-item">@R["ReportModule-進銷報表查詢"]</a>
                </div>
            </li>
            @* 系統模組 *@
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navSystemModule"
                   role="button" data-toggle="dropdown"
                   aria-expanded="false"
                   aria-haspopup="true">
                    @R["SystemModule"]
                </a>
                <div class="dropdown-menu" aria-labelledby="navSystemModule">
                    <a asp-area="System"
                       asp-controller="PersonalProfile"
                       asp-action="Index"
                       class="dropdown-item">
                        @R["SystemModule-個人資料管理"]
                    </a>

                    <a asp-area="System"
                       asp-controller="UserRole"
                       asp-action="Index" class="dropdown-item">
                        @R["SystemModule-人員權限管理"]
                    </a>

                    <a asp-area="System"
                       asp-controller="Account"
                       asp-action="Index"
                       class="dropdown-item">
                        @R["SystemModule-帳號註冊"]
                    </a>
                </div>
            </li>
        </ul>
        @await Html.PartialAsync("_LoginPartial")
    </div>

</nav>