@using Microsoft.AspNetCore.Identity
@using Redoak.Backoffice.Models
@using Redoak.Domain.Model.ViewModel

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form class="ml-auto" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"
                   class="nav-link">您好! @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link  nav-link">Log out</button>
            </li>
        </ul>
    </form>
}